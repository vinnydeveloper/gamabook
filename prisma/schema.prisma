generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  senha      String
  created_at DateTime
  updated_at DateTime
}

model Fotos {
  id         Int      @id @default(autoincrement())
  url        String
  livroId    Int
  livro      Livros   @relation(fields: [livroId], references: [id])
  created_at DateTime
  updated_at DateTime
}

model Livros {
  id             Int         @id @default(autoincrement())
  titulo         String      @unique
  autor          String
  ano_lancamento DateTime
  created_at     DateTime
  updated_at     DateTime
  categorias     Categoria[]
  fotos          Fotos[]
}

model Categoria {
  id         Int      @id @default(autoincrement())
  nome       String   @unique
  created_at DateTime
  updated_at DateTime
  livros     Livros[]
}
